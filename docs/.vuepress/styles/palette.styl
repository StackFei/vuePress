// $contentWidth = 100%

$accentColor = #428eb9        //主题颜色
$textColor = #2c3e50
$borderColor = #eaecef
// $codeBgColor = #000000
$badgeTipColor = #42b983
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961

::-webkit-scrollbar {
  // display: none; /* Chrome Safari */
}

/*修改prev和next的max-width*/
.page-edit, .page-nav{
  max-width: 1040px
}

// 主页面
.home {
    padding 0
    max-width 100%
    margin 0px auto
    display block
}

main {
  margin 0
}

.hero {
  padding 3rem 0
  margin 54px 0
  background-color #f5f6f8
  overflow hidden
}

.home .hero h1 {
  // margin: 0
  border none
}

.home .hero .description {
    max-width: 35rem;
    font-size: 1.6rem;
    line-height: 1.3;
    color: #000;
    // display none
}
.home .hero .description:after{
  content: "⚔🛡";
  display: block;
  position: relative
  left 0
  top 0
  margin-top -33px
  height: 50px;
  background-color #f5f6f8
  text-align center
}

.home .hero .action-button {
    display inline-block
    font-size 15px
    color #fff
    border-radius 25px
    cursor: pointer;
    outline: none;
    transition background-color 0.1s ease
    box-sizing border-box
    border none
}


// nav
.navbar
    position: fixed;
    z-index: 20;
    top: 0;
    left: 0;
    right: 0;
    height: 3.6rem;
    background-color: #fff;
    box-sizing: border-box;
    border none
    box-shadow 0 8px 24px -2px rgba(0,0,0,.05)

// 顶部navbar 单个item
.nav-item > a:not(.external):hover, 
.nav-item > a:not(.external).router-link-active {
    padding-bottom 10px
    border-bottom 2px solid#428eb9
}

input {
    border none !important
    background: #f5f6f7 !important;
}

// navbar 单个选中 item
.home .features {
  max-width 960px
  margin 0 auto
  // border-top: 1px solid #eaecef;
  text-align center
  border none
  padding: 1.2rem 0;
  margin-top: 2.5rem;
  cursor pointer
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: stretch;
  justify-content: space-between;
}

.home .feature:nth-child(1):before {
  content: "";
  margin:  0 auto
  display: block;
  height: 40px;
  width 40px
  text-align center
  background: url(/img/1.png) no-repeat;
  background-size: 100%;
}
.home .feature:nth-child(2):before {
  content: "";
  margin:  0 auto
  display: block;
  height: 40px;
  width 40px
  text-align center
  background: url(/img/2.png) no-repeat;
  background-size: 100%;
}
.home .feature:nth-child(3):before {
  content: "";
  margin:  0 auto
  display: block;
  height: 40px;
  width 40px
  text-align center
  background: url(/img/3.png) no-repeat;
  background-size: 100%;
}

// 左侧
a.sidebar-link.active {
    font-weight: 600;
    box-shadow 0 8px 24px -2px rgba(0,0,0,.05)
    border none
    padding-left  2rem
}


blockquote
  font-size 1rem
  color #2c3e50;
  border-left .2rem solid #428eb9
  background-color #f3f5f7
  margin 1rem 0
  padding 1rem 0 1rem 1rem
  border-radius 0.5rem

  & > p
    margin 0

// markdown h1
h1
  font-size 2rem
  padding-bottom 1rem
  border-bottom 1px solid $borderColor

// markdown h2
h2
  font-size 1.65rem
  border-bottom 0px solid $borderColor

// custom block for tip
.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #dfefff
    border-color #428eb9









