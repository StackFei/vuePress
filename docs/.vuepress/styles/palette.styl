$accentColor = #ffc0cb        //主题颜色
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #000000
$badgeTipColor = #42b983
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961

::-webkit-scrollbar
{
  width: 8px;
  height: 8px;
  border-radius: 10px;
  background-color: #F5F5F5;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background-color: #F5F5F5;
}


/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
  border-radius: 10px;
  /* 线性渐变 */
  background-image: -webkit-gradient(linear,
  left bottom, left top,
   color-stop(0.44, #e3c179),
   color-stop(0.72, #b43531),
   color-stop(0.86, #397eb4));
  transition: 0.3s ease-in-out;
}
/*定义滑块悬浮样式*/
::-webkit-scrollbar-thumb:hover{
  background-image: -webkit-gradient(linear,
  left bottom, left top,
  color-stop(0.44, #e3c179),
  olor-stop(0.72, #b43531),
  color-stop(0.86, #397eb4));
  transition: 0.3s ease-in-out;
}

/*修改prev和next的max-width*/
.page-edit, .page-nav{
  max-width: 1040px
}


blockquote
  font-size 1rem
  color #2c3e50;
  border-left .5rem solid #ffc0cb
  background-color #f3f5f7
  margin 1rem 0
  padding 1rem 0 1rem 1rem
  border-radius 0.5rem

  & > p
    margin 0

// markdown h1
h1
  font-size 2rem
  padding-bottom 1rem
  border-bottom 1px solid $borderColor

// markdown h2
h2
  font-size 1.65rem
  border-bottom 0px solid $borderColor

// custom block for tip
.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #dfefff
    border-color #428eb9

// logo
.navbar
  .logo
    height $navbarHeight - 1.6rem
    min-width $navbarHeight - 1.6rem
    margin-right 0rem
    vertical-align top


